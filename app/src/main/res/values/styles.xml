<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="movie_detail_synopsis" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:paddingLeft">@dimen/movie_detail_synopsis_pad</item>
        <item name="android:paddingRight">@dimen/movie_detail_synopsis_pad</item>
        <item name="android:paddingTop">@dimen/movie_detail_synopsis_pad</item>
        <item name="android:paddingBottom">@dimen/movie_detail_synopsis_pad</item>
        <item name="android:textColor">@color/movie_title_synopsis</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="movie_detail_thumb_text">
        <item name="android:paddingLeft">@dimen/movie_detail_thumb_text_pad</item>
        <item name="android:paddingRight">@dimen/movie_detail_thumb_text_pad</item>
        <item name="android:paddingTop">@dimen/movie_detail_thumb_text_pad</item>
        <item name="android:paddingBottom">@dimen/movie_detail_thumb_text_pad</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:width">@dimen/abc_floating_window_z</item>
    </style>

    <style name="movie_detail_thumb_title" parent="movie_detail_thumb_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>
